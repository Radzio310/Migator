<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:id="@+id/imageView2"
        android:layout_width="246dp"
        android:layout_height="299dp"
        android:layout_marginStart="82dp"
        android:layout_marginTop="25dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@drawable/awatarmichal1" />

    <Button
        android:id="@+id/goBackButton"
        android:layout_width="133dp"
        android:layout_height="55dp"
        android:layout_marginStart="136dp"
        android:layout_marginTop="324dp"
        android:onClick="GoTo_MainActivity"
        android:text="@string/GoBackButton"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch1"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="439dp"
        android:layout_weight="1"
        android:text="Opcja2"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Switch
        android:id="@+id/switch2"
        android:layout_width="329dp"
        android:layout_height="60dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="379dp"
        android:text="Opcja1"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView4"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="499dp"
        android:gravity="start|center_vertical"
        android:text="Opcja3"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText2"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="238dp"
        android:layout_marginTop="499dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Opcja3:value"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="196dp"
        android:layout_height="48dp"
        android:layout_marginStart="41dp"
        android:layout_marginTop="547dp"
        android:gravity="start|center_vertical"
        android:text="Opcja4"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/editTextText3"
        android:layout_width="132dp"
        android:layout_height="48dp"
        android:layout_marginStart="237dp"
        android:layout_marginTop="547dp"
        android:ems="10"
        android:gravity="center"
        android:hint="Opcja4:value"
        android:inputType="text"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>